:root {
  /***********/
  /* Display */
  /***********/

  /* Display background */
  --display-background-color: #ffffff;
  --display-highlight-background-color: #e1bee73d;
  --display-dim-background-color: #21212124;
  --display-background-image: url('/api/themes/presenter/images/logo-pastel.png');
  --display-background-size: 121.5%;

  /* Display line colours */
  --display-line-1-color: #000000;
  --display-line-2-color: var(--display-line-1-color);
  --display-line-3-color: var(--display-line-1-color);
  --display-line-4-color: var(--display-line-1-color);
  --display-line-5-color: var(--display-line-1-color);
  --display-line-6-color: var(--display-line-1-color);
  --display-line-7-color: var(--display-line-1-color);

  --display-line-1-opacity: 1;
  --display-line-2-opacity: 0.95;
  --display-line-3-opacity: 0.9;
  --display-line-4-opacity: 0.85;
  --display-line-5-opacity: 0.8;
  --display-line-6-opacity: 0.75;
  --display-line-7-opacity: 0.7;

  --display-extra-line-1-color: var(--display-line-1-color);
  --display-extra-line-2-color: var(--display-extra-line-1-color);
  --display-extra-line-3-color: var(--display-extra-line-1-color);
  --display-extra-line-4-color: var(--display-extra-line-1-color);
  --display-extra-line-5-color: var(--display-extra-line-1-color);

  --display-extra-line-1-opacity: 0.95;
  --display-extra-line-2-opacity: 0.9;
  --display-extra-line-3-opacity: 0.85;
  --display-extra-line-4-opacity: 0.8;
  --display-extra-line-5-opacity: 0.75;

  --display-gurmukhi-larivaar-assist-color: red;
  --display-transliteration-larivaar-assist-color: var(--display-gurmukhi-larivaar-assist-color);

  /* Display line pause/vishraam colours */
  --display-vishraam-heavy-color: #ff8f00;
  --display-vishraam-medium-color: #33691e;
  --display-vishraam-light-color: #0d47a1;

  /**************/
  /* Controller */
  /**************/

  /* Controller colors */
  --controller-background-color: #eeeeee;
  --controller-text-color: #424242;
  --controller-text-hover-color: #212121;
  --controller-selected-color: var(--controller-text-hover-color);
  --controller-selected-background-color: #cfd8dc;
  --controller-hover-background-color: #e0e0e0;
  --controller-selected-hover-background-color: #d8dcde;

  /* Controller search colors */
  --controller-search-background-color: transparent;
  --controller-search-focused-background-color: #e0e0e0;
  --controller-search-match-color: #0d47a1;

  /* Controller top and bottom bar colors */
  --controller-bar-text-color: #616161;
  --controller-bar-text-hover-color: var(--controller-text-color);
  --controller-bar-background-color: #f5f5f5;

  /*****************/
  /* Settings      */
  /*****************/

  /* Settings Title */
  --settings-title-background-color: var(--controller-bar-background-color);
  --settings-title-text-color: var(--controller-bar-text-color);

  /* Settings Menu */
  --settings-menu-background-color: var(--controller-bar-background-color);
  --settings-menu-text-color: var(--controller-bar-text-color);
  --settings-menu-icon-color: var(--settings-menu-text-color);

  /* Settings Content */
  --settings-background-color: var(--controller-background-color);
  --settings-text-color: var(--controller-text-color);
  --settings-setting-off-color: #fafafa;
  --settings-setting-on-color: var(--controller-search-match-color);
  --settings-setting-shadow: #0d47a131;

  /*****************/
  /* Miscellaneous */
  /*****************/

  /* Scrollbar colour */
  --scrollbar-color: rgba(0, 0, 0, 0.5);
}
